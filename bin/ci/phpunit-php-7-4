#!/usr/bin/env sh

set -eu

if type docker > /dev/null 2>&1; then
    readonly rootDir=$(realpath $(dirname $(realpath $0))/../..)

    docker \
        run \
            -it \
            --tty \
            --rm \
            --volume "${rootDir}":/app \
            --user $(id -u):$(id -g) \
            --entrypoint bin/ci/phpunit-php-7-4 \
            --workdir /app \
            steevanb/php-parallel-process:phpunit
else
    php7.4 vendor/bin/phpunit --configuration config/ci/phpunit.xml
fi

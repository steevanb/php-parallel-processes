#!/usr/bin/env sh

set -eu

readonly rootDir=$(realpath $(dirname $(realpath $0))/../..)

if type docker > /dev/null 2>&1; then
    docker \
        run \
            -it \
            --rm \
            --volume "${rootDir}":/app \
            --user $(id -u):$(id -g) \
            --entrypoint /app/bin/ci/validate \
            --workdir /app \
            steevanb/php-ci:latest \
            "${@}"
else
    php "${rootDir}"/bin/ci/validate.php "${@}"
fi

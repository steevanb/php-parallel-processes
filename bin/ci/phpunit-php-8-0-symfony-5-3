    readonly PHP_BIN="php8.0"
    readonly COMPOSER_HOME_SYMFONY="${COMPOSER_HOME_SYMFONY_5_3}"
fi

. "${ROOT_DIR}"/bin/ci/phpunit-php.common.sh

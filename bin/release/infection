#!/usr/bin/env sh

set -eu

readonly ROOT_DIR="$(realpath "$(dirname "$(realpath "$0")")/../..")"
. "${ROOT_DIR}"/bin/common.inc.bash
. "${ROOT_DIR}"/bin/dockerise.inc.bash


XDEBUG_MODE=coverage \
    infection \
        --configuration=config/release/infection.json \
        --threads=10 \
        --only-covered \
        --ansi \
        "${@}"

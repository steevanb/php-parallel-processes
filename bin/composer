#!/usr/bin/env sh

set -eu

readonly rootDir="$(realpath "$(dirname "$(realpath "$0")")/..")"
. "${rootDir}/bin/common.inc.sh"

removeComposerLock() {
    if [ -f "${rootDir}/composer.lock" ]; then
        rm "${rootDir}/composer.lock"
    fi
}

if ! ${IS_IN_DOCKER}; then
    docker \
        run \
            --rm \
            --tty \
            ${DOCKER_INTERACTIVE_PARAMETER} \
            --volume "${rootDir}":/app \
            --user "$(id -u)":"$(id -g)" \
            --entrypoint bin/"$(basename "${0}")" \
            --workdir /app \
            --env COMPOSER_HOME=/app/var/composer \
            steevanb/php-parallel-process:ci \
            "${@}"
    exit 0
fi

removeComposerLock
composer "${@}"
removeComposerLock
